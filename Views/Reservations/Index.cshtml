@model IEnumerable<ParkingSpacesApp.Models.Reservations>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Reservation List</h2>
        </div>
        <div class="col-6 text-right" >
            <a asp-controller="Reservations" asp-action="Create" class="btn btn-primary">Create new reservation</a>
            
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
            {
               <table class="table table-bordered table-striped" style="width:100%">
                   <thead>
                       <tr>
                           <th>
                               User ID
                           </th>
                           <th>
                               Parking Space ID
                           </th>
                           <th>
                               Date
                           </th>
                           <th>
                               Building ID
                           </th>
                       </tr>
                   </thead>
                   <tbody>
                       @foreach(var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.UserID</td>
                        <td width="15%">@obj.ParkingSpaceID</td>
                        <td width="15%">@obj.Date</td>
                        <td width="15%">@obj.BuildingID</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Reservations" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Reservations" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                            </div>

                        </td>
                    </tr>
                }
                   </tbody>
               </table>
            }
            else
            {
                <p>No reservation exists.</p>
            }
</div>
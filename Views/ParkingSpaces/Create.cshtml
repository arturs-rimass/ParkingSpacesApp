@model ParkingSpacesApp.Models.ParkingSpaces

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add parking space</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FloorNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FloorNumber" class="form-control">
                        <label asp-validation-for="FloorNumber" class="text-danger"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpaceNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpaceNumber" class="form-control">
                        <span asp-validation-for="SpaceNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="HasCharger"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="HasCharger" class="form-control">
                        <span asp-validation-for="HasCharger" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class=" col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" /> }
}


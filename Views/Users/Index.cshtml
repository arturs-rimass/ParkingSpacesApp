@model IEnumerable<ParkingSpacesApp.Models.Users>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-right" >
            <a asp-controller="Users" asp-action="Create" class="btn btn-primary">Create new user</a>
            
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
            {
               <table class="table table-bordered table-striped" style="width:100%">
                   <thead>
                       <tr>
                           <th>
                               User Name
                           </th>
                           <th>
                               Phone Number
                           </th>
                           <th>
                               Email
                           </th>
                       </tr>
                   </thead>
                   <tbody>
                       @foreach(var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.Name</td>
                        <td width="20%">@obj.PhoneNumber</td>
                        <td width="20%">@obj.Email</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Users" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                            </div>

                        </td>
                    </tr>
                }
                   </tbody>
               </table>
            }
            else
            {
                <p>No user exists.</p>
            }
</div>